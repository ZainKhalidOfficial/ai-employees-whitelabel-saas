model Companion {
  id  String @id @default(uuid())
  userId String
  userName String
  src String
  name  String @db.Text
  description String
  instructions  String @db.Text
  seed  String @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  category Category @relation(fields: [categoryId], references: [id])
  categoryId String

  messages Message[]

  @@index([categoryId])
